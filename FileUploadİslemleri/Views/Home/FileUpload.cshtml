@model Uye

@* enctype - multipart/form-data ifadesi önemli*@
<form asp-controller="Home" asp-action="FileUpload" method="post" enctype="multipart/form-data">

    
    <div class="form-group">
        <label for="exampleFormControlFile1">Dosya Yükle</label>

        @* type="file" diyerek dosya olacağını belirtiyoruz*@

        <input type="file"  name="dosya" class="form-control-file" id="dosya">
    </div>
    <button type="submit" class="btn btn-primary mb-2">Dosyayı Gönder</button>
</form>